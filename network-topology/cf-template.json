{
	"Resources": {
		"VPC": {
			"Type": "AWS::EC2::VPC",
			"Properties": {
				"CidrBlock": "10.0.0.0/16",
				"EnableDnsSupport": true,
				"EnableDnsHostnames": true,
				"Tags": [
					{
						"Key": "Name",
						"Value": "vpc-02"
					}
				]
			}
		},
		"SecurityGroup": {
			"Type": "AWS::EC2::SecurityGroup",
			"Properties": {
				"GroupDescription": "vpc security group",
				"GroupName": "StrictFirewall",
				"SecurityGroupIngress": [
					{
						"IpProtocol": "tcp",
						"FromPort": 80,
						"ToPort": 80,
						"CidrIp": "0.0.0.0/0"
					},
					{
						"IpProtocol": "tcp",
						"FromPort": 22,
						"ToPort": 22,
						"CidrIp": "0.0.0.0/0"
					}
				],
				"SecurityGroupEgress": [
					{
						"IpProtocol": "tcp",
						"FromPort": 80,
						"ToPort": 80,
						"CidrIp": "0.0.0.0/0"
					}
				],
				"VpcId": {
					"Ref": "VPC"
				}
			}
		},
		"Subnet1": {
			"Type": "AWS::EC2::Subnet",
			"Properties": {
				"VpcId": {
					"Ref": "VPC"
				},
				"CidrBlock": "10.0.1.0/24",
				"AvailabilityZone": "ap-south-1a",
				"Tags": [
					{
						"Key": "Name",
						"Value": "10.0.1.0/24 - private - ap-south-1a"
					}
				]
			}
		},
		"Subnet2": {
			"Type": "AWS::EC2::Subnet",
			"Properties": {
				"VpcId": {
					"Ref": "VPC"
				},
				"CidrBlock": "10.0.2.0/24",
				"AvailabilityZone": "ap-south-1a",
				"Tags": [
					{
						"Key": "Name",
						"Value": "10.0.2.0/24 - public - ap-south-1a"
					}
				]
			}
		},
		"Subnet3": {
			"Type": "AWS::EC2::Subnet",
			"Properties": {
				"VpcId": {
					"Ref": "VPC"
				},
				"CidrBlock": "10.0.3.0/24",
				"AvailabilityZone": "ap-south-1b",
				"Tags": [
					{
						"Key": "Name",
						"Value": "10.0.3.0/24 - private - ap-south-1b"
					}
				]
			}
		},
		"RouteTable2": {
			"Type": "AWS::EC2::RouteTable",
			"Properties": {
				"VpcId": {
					"Ref": "VPC"
				}
			}
		},
		"NATGatewayEIP": {
			"Type": "AWS::EC2::EIP",
			"Properties": {
				"Domain": "vpc"
			}
		}
	},
	"Outputs": {
		"publicSubnetId": {
			"Description": "The subnet ID to use for associating route table",
			"Value": {
				"Ref": "Subnet2"
			},
			"Export": {
				"Name": {
					"Fn::Sub": "${AWS::StackName}-publicSubnetId"
				}
			}
		},
		"publicRouteTableId": {
			"Description": "The route table ID to use for opening internet and nat gateway",
			"Value": {
				"Ref": "RouteTable2"
			},
			"Export": {
				"Name": {
					"Fn::Sub": "${AWS::StackName}-publicRouteTableId"
				}
			}
		},
		"vpcId": {
			"Description": "Main VPC to use for sharing the network topology",
			"Value": {
				"Ref": "VPC"
			},
			"Export": {
				"Name": {
					"Fn::Sub": "${AWS::StackName}-vpcId"
				}
			}
		},
		"eipAllocationId": {
			"Description": "The allocation id of the Elastic IP address",
			"Value": {
				"Fn::GetAtt": [
					"NATGatewayEIP",
					"AllocationId"
				]
			},
			"Export": {
				"Name": {
					"Fn::Sub": "${AWS::StackName}-eipAllocationId"
				}
			}
		}
	},
	"Metadata": {
		"AWS::Composer::Groups": {
			"Group": {
				"Label": "Group",
				"Members": [
					"SecurityGroup",
					"VPC",
					"Subnet1",
					"Subnet3",
					"Subnet2",
					"RouteTable2"
				]
			}
		}
	}
}
